<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="202dp"
    android:background="@drawable/curved_btn">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#B7143C"
        android:id="@+id/grid_layout">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/biography"
            android:textColor="@color/colorPrimary"
            android:id="@+id/grid_product_title"
            android:textSize="15sp"
            android:textStyle="bold"
            android:paddingTop="20dp"
            android:paddingBottom="10dp"
            android:textAlignment="center"
            android:layout_gravity="center_horizontal"/>
        
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/grid_image"
            android:contentDescription="@string/image_text"
            android:src="@drawable/grid_product_1"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/grid_product_title"/>
    </RelativeLayout>

</LinearLayout>